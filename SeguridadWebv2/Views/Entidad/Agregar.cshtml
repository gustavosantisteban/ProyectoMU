@model SeguridadWebv2.Models.ViewModels.RegistrarEntidadViewModel
@{
    ViewBag.Title = "Agregar";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}
<h2>Agregar</h2>
@using (Html.BeginForm("Agregar", "Entidad", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Formulario Agregar Usuario.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-error" })
    <div class="form-group">
        @Html.LabelFor(m => m.Descripcion, new { @class = "col-md-2 control-label" })
        <div class="col-md-6 input-group">
            @Html.TextBoxFor(m => m.Descripcion, new { @class = "form-control" })
            <span class="input-group-addon">
                <span class="fa fa-user">
                </span>
            </span>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Comision, new { @class = "col-md-2 control-label" })
        <div class="col-md-6 input-group">
            @Html.TextBoxFor(m => m.Comision, new { @class = "form-control" })
            <span class="input-group-addon">
                <span class="fa fa-user">
                </span>
            </span>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Descripcion, new { @class = "col-md-2 control-label" })
        <div class="col-md-6 input-group">
            @Html.TextBoxFor(m => m.Descripcion, new { @class = "form-control" })
            <span class="input-group-addon">
                <span class="fa fa-user">
                </span>
            </span>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Estado, new { @class = "col-md-2 control-label" })
        <div class="col-md-6 input-group">
            @Html.CheckBoxFor(x => x.Estado)
        </div>
        @Html.ValidationMessageFor(x => x.Estado, null, new { @class = "help-block text-center" })
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-6">
            <input type="submit" class="btn btn-success" value="Agregar" />
        </div>
    </div>
}

